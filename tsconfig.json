{
    "compilerOptions": {
        "noImplicitReturns": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noUnusedLocals": false,
        "removeComments": true,
        "target": "es6",
        "module": "ESNext",
        "strict": false,
        "typeRoots": ["vendor/types"]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "build"
    ]
}